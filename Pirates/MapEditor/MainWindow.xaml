<Window x:Class="MapEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Editor" Height="768" Width="1024">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="717" Margin="806,10,0,0" VerticalAlignment="Top" Width="200">
            <TabItem Header="Terrain">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Cities">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Other">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ships and routes">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button Content="New map" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Name="newMapButton" Click="newMapButton_Click"/>
        <Button Content="Open map" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Name="openMapButton"/>
        <Button Content="Save map as" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Name="saveMapButton"/>
        <Button Content="Generate Test map" HorizontalAlignment="Left" Margin="263,10,0,0" VerticalAlignment="Top" Width="148" x:Name="generateMapButton" Click="generateMapButton_Click"/>

    </Grid>
</Window>
