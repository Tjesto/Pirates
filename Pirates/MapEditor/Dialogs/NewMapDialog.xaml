<Window x:Class="MapEditor.Dialogs.NewMapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New map info" Height="251.282" Width="196.154">
    <Grid>
        <Button Content="Create" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top" Width="75" Name="dialogCreateButton" Click="dialogCreateButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="103,190,0,0" VerticalAlignment="Top" Width="75" Name="dialogCancelButton" Click="dialogCancelButton_Click"/>
        <Label Content="Map width:" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="mapWidthValue" AllowDrop="False"/>
        <Label Content="Map height:" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="mapHeightValue" AllowDrop="False"/>
        <Label Content="Map name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="New Map" VerticalAlignment="Top" Width="120" Name="mapNameValue"/>

    </Grid>
</Window>
